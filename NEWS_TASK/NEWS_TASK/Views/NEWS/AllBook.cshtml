@model  List<NEWS_TASK.Models.Database.Newsdata>
@{
    ViewBag.Title = "AllBook";
}

<h2>AllBook</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Category</th>
        <th>PublishDate</th>
        <th>Action</th>
    </tr>
    @foreach (var a in Model)
    {
        <tr>


            <td>@a.Id</td>
            <td>@a.Title</td>
            <td>@a.Description</td>
            <td>@a.Category</td>
            <td>@a.PublishDate</td>
            <td><a href="/NEWS/Edit/@a.Id" class="btn btn-primary">Edit</a></td>
            <td><a href="/NEWS/Delete/@a.Id" class="btn btn-danger">Delete</a></td>
            



        </tr>
    }
    </table>

