<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/38b09dcc3b.js" crossorigin="anonymous"></script>
</head>
<body>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f5f5f5;
        }
    </style>


    <div class="row vh-100">
        <!-- Sidebar -->
        <div class="flex-shrink-0 vh-100 bg-dark shadow-sm" style="width: 280px;">
            <a href="/" class="d-flex align-items-center mb-3 p-2 link-dark text-decoration-none border-bottom">
                <span class="fs-5 fw-bold btn col-12 text-white">
                    <i class="fa-solid fa-laptop-medical"></i>
                    PharmaStore
                </span>
            </a>

            <ul class="list-unstyled ps-0 ms-4">
                <li class="mb-1">
                    <a class="btn align-items-center rounded text-white" href="/Admin">
                        <i class="fas fa-tachometer-alt"></i> &nbsp;
                        Medicines
                    </a>
                </li>
                <li class="mb-1">
                    <a class="btn align-items-center rounded text-white" href="/type">
                        <i class="fa-solid fa-arrow-up-9-1"></i> &nbsp;
                        Orders
                    </a>
                </li>
                
                
                
                <li class="mb-1">
                    <button class="btn align-items-center rounded text-white">
                        <i class="fa-solid fa-tags"></i> &nbsp;
                        Discounts
                    </button>
                </li>
                <li class="border-top my-3"></li>
                <li class="mb-1">
                    <button class="btn btn-toggle align-items-center rounded collapsed text-white " data-bs-toggle="collapse" data-bs-target="#account-collapse" aria-expanded="false">
                        <i class="fas fa-user-alt"></i> &nbsp;
                        Account
                    </button>
                    <div class="collapse ms-5" id="account-collapse">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1">
                            <li><a href="#" class="link-dark rounded text-white" style="text-decoration: none">New...</a></li>
                            <li><a href="#" class="link-dark rounded text-white" style="text-decoration: none">Profile</a></li>
                            <li><a href="#" class="link-dark rounded text-white" style="text-decoration: none">Settings</a></li>
                            <li><a href="/Auth/Signout" class="link-dark rounded text-white" style="text-decoration: none">Sign out</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>


        <div class="col" style="margin-right:-15px;">

            <!-- Navbar -->
            <div>
                <!-- If you do not have a consistent goal in life, you can not live it in a consistent way. - Marcus Aurelius -->
                <div class="row">
                    <nav class="navbar navbar-dark bg-primary">
                        <div class="container-fluid">
                            <h6 class="navbar-brand my-auto">Customer Dashboard</h6>
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Search here" aria-label="Search">
                                <button class="btn btn-success" type="submit"><i class="fas fa-search"></i></button>
                            </form>
                        </div>
                    </nav>
                </div>
            </div>


            <!-- Dashboard -->
            <div class="row container">
                @RenderBody()
            </div>



        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</body>
</html>


