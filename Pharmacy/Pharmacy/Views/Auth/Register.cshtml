@model Pharmacy.Models.Database.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<section class="ftco-section">
    <div class="container">
       
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-2">
                        <h2 class="heading-section">PharmaStore</h2>
                    </div>
                </div>
                <div class="wrap">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Sign Up</h3>
                            </div>
                        </div>
                        <form action="/Auth/Register" method="POST" class="signin-form">
                            <div class="form-group mt-3">
                                <input name="name" value="@Model.name" type="text" class="form-control">
                                <label class="form-control-placeholder" for="name">name</label>
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-3">
                                <input name="email" value="@Model.email" type="text" class="form-control">
                                <label class="form-control-placeholder" for="email">E-mail</label>
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-3">
                                <input name="phone" value="@Model.phone" type="text" class="form-control">
                                <label class="form-control-placeholder" for="phone">Phone</label>
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-3">
                                <input name="address" value="@Model.address" type="text" class="form-control">
                                <label class="form-control-placeholder" for="address">Address</label>
                                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-3">
                                <input name="password" value="@Model.password" id="password-field" type="password" class="form-control">
                                <label class="form-control-placeholder" for="password">Password</label>
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                            </div>

                        </form>
                        <p class="text-center">Already registered? <a data-toggle="tab" href="/auth/login">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
